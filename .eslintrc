parser: 'babel-eslint'

extends: 'airbnb'

env:
  browser: true
  node: true
  es6: true
  mocha: true

globals:
  OPTIMIZED: true

rules:
  arrow-parens: [1, 'as-needed']
  indent: [2, 'tab']
  react/jsx-indent-props: [2, 'tab']
  jsx-quotes: [2, 'prefer-single']
  id-length: 0
  no-console: 0
  new-cap: [2, {'capIsNewExceptions': ['CSSModules']}]
  no-multiple-empty-lines: [2, { max: 5 }]

ecmaFeatures:
  jsx: true
  module: true

plugins:
  - react
