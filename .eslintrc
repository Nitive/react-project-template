parser: 'babel-eslint'

extends: 'airbnb'

env:
  browser: true
  node: true
  es6: true
  mocha: true

globals:
  OPTIMIZED: true

rules:
  arrow-parens: [1, 'as-needed']
  indent: [2, 'tab']
  jsx-quotes: [2, 'prefer-single']
  id-length: 0
  no-console: 0
  new-cap: [2, {'capIsNewExceptions': ['CSSModules']}]

ecmaFeatures:
  jsx: true
  module: true

plugins:
  - react
